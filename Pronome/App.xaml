<Application x:Class="Pronome.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Pronome"
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--The base panel of the beat layer-->
        <Grid
            x:Key="layerGrid"
            x:Shared="False"/>
        
        <!--The panel that holds the inner contents of beat layer controls-->
        <WrapPanel
            x:Key="layerWrap"
            x:Shared="False"/>
        
        <!--The beat code input control-->
        <avalonEdit:TextEditor 
            x:Key="textEditor" 
            x:Shared="False"
            SyntaxHighlighting="Pronome"
            FontFamily="Consolas"
            FontSize="12pt" 
            VerticalScrollBarVisibility="Auto" 
            HorizontalScrollBarVisibility="Auto"
            Background="Black"
            Foreground="White"
            Margin="8"/>
        
        <!--Source selector dropdown-->
        <ComboBox
            x:Key="sourceSelector"
            x:Shared="False"/>
        
        <!--Pitch input-->
        <TextBox
            x:Key="pitchInput"
            Width="50"
            Background="Black"
            Foreground="White"
            FontFamily="Consolas"
            FontSize="12pt"
            x:Shared="False"/>
        
        <!--Offset input-->
        <TextBox
            x:Key="offsetInput"
            Width="50"
            Background="Black"
            Foreground="White"
            FontFamily="Consolas"
            FontSize="12pt"
            x:Shared="False"/>
        
        <!--Volume control-->
        <Slider
            x:Key="volumeControl"
            Maximum="1"
            Minimum="0"
            Value="1"
            x:Shared="False"/>

        <!--Pan control-->
        <Slider
            x:Key="panControl"
            Maximum="1"
            Minimum="-1"
            Value="0"
            x:Shared="False"/>

        <!--Mute button-->
        <ToggleButton
            x:Key="muteButton"
            x:Shared="False">
            M
        </ToggleButton>
        
        <!--Solo button-->
        <ToggleButton
            x:Key="soloButton"
            x:Shared="False">
            S
        </ToggleButton>
        
        <!--Delete button-->
        <Button
            x:Key="deleteButton"
            x:Shared="False">
            X
        </Button>

    </Application.Resources>
</Application>
